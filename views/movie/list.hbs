<h3> <a class="btn btn-secondary" href="/movie"> <i class="fa fa-plus"></i> Create New</a> Movie Details </h3>
<table class="table table-striped" >
    <thead>
      <tr style="text-align:center;">
        <th> Movie Name </th>
        <th> Image </th>
        <th> Summary </th>
        <th>  </th>
      </tr>
  </thead>
  <tbody>
      {{#each list}}
      <tr>
        <td>{{this.fullName}}</td>
        <td>{{this.img}}</td>
        <td>{{this.summary}}</td>
        <td>
          <a href="/movie/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
          <a href="/movie/delete/{{this._id}}" onclick="return confirm('Are you sure to delete the record ?');"><i class="fa fa-trash fa-lag" aira-hidden="true"></i></a>
        </td>
      </tr>
      {{/each}}
  </tbody>
</table>
